<?xml version="1.0"?>

<PropertyList>

	<path>../../../Models/FlightDeck/Glareshield/efis_c.ac</path> 
	<texture-path>../../../Textures/Instruments</texture-path>
	<offsets>
		<z-m>0.25</z-m>
	</offsets>
	
    <animation>
       <type>material</type>
       <object-name>backlight</object-name>
       <emission>
         <red>0.325</red>
         <green>0.184</green>
         <blue>0.001</blue>
         <factor-prop>/controls/switches/storm-lights</factor-prop>
       </emission>
    </animation>

 <animation>
    <type>pick</type>
    <object-name>baro.select</object-name>
    <action>
        <button>0</button>
	<binding>
          <command>property-toggle</command>
          <property>/instrumentation/efis/baro-mode</property>
        </binding>
      </action>
  </animation>

  <animation>
    <condition>
      <equals>
        <property>/instrumentation/efis/baro-std-mode</property>
        <value>0</value>
      </equals>
    </condition>
    <type>pick</type>
    <object-name>baro.knob</object-name>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
	<property>/instrumentation/altimeter/setting-inhg</property>
	<step>0.01</step>
	<max>40.00</max>
	<min>0.00</min>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
	<property>/instrumentation/altimeter/setting-inhg</property>
	<step>-0.01</step>
	<max>40.00</max>
	<min>0.00</min>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>baro.knob</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/baro-std-mode</property>
      </binding>
    </action>
  </animation>

   <text>
    <name>baro.value.hPa</name>
    <axis-alignment>yz-plane</axis-alignment>
    <alignment>right-bottom</alignment>
    <offsets>
      <pitch-deg>-90.0</pitch-deg>
      <x-m>-0.068</x-m>
      <y-m>0.045</y-m>
      <z-m>0.0009</z-m>
    </offsets>
    <type>number-value</type>
    <property type="string">/instrumentation/efis/kpa</property>
    <format type="string">%4.0f</format>
    <font>led.txf</font>
    <character-size type="double">0.0093</character-size>
  </text>
  
   <text>
    <name>baro.value.inhg</name>
    <axis-alignment>yz-plane</axis-alignment>
    <alignment>right-bottom</alignment>
    <offsets>
      <pitch-deg>-90.0</pitch-deg>
      <x-m>-0.068</x-m>
      <y-m>0.045</y-m>
      <z-m>0.0009</z-m>
    </offsets>
    <type>number-value</type>
    <property type="string">/instrumentation/efis/inhg</property>
    <format type="string">%2.2f</format>
    <font>led.txf</font>
    <character-size type="double">0.0093</character-size>
  </text>
  
  <text>
    <name>baro.value.std</name>
    <axis-alignment>yz-plane</axis-alignment>
    <alignment>right-bottom</alignment>
    <offsets>
      <pitch-deg>-90.0</pitch-deg>
      <x-m>-0.068</x-m>
      <y-m>0.045</y-m>
      <z-m>0.0009</z-m>
    </offsets>
    <type>literal</type>
    <text type="string">Std</text>
    <font>led.txf</font>
    <character-size type="double">0.0093</character-size>
  </text>
  
  <animation>
    <type>select</type>
    <object-name>baro.value.hPa</object-name>
    <condition>
      <and>
        <equals>
          <property>/instrumentation/efis/baro-mode</property>
          <value>1</value>
        </equals>
        <equals>
          <property>/instrumentation/efis/baro-std-mode</property>
          <value>0</value>
        </equals>
        <greater-than>
          <property>/systems/electrical/outputs/efis</property>
          <value>15</value>
        </greater-than>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>baro.value.inhg</object-name>
    <condition>
      <and>
        <equals>
          <property>/instrumentation/efis/baro-mode</property>
          <value>0</value>
        </equals>
        <equals>
          <property>/instrumentation/efis/baro-std-mode</property>
          <value>0</value>
        </equals>
        <greater-than>
          <property>/systems/electrical/outputs/efis</property>
          <value>15</value>
        </greater-than>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>baro.value.std</object-name>
    <condition>
      <and>
        <equals>
          <property>/instrumentation/efis/baro-std-mode</property>
