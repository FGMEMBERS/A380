 <animation>
   <type>pick</type>
   <object-name>ndmode.knob</object-name>
   <action>
     <button>0</button>
     <repeatable>false</repeatable>
     <binding>
      <command>property-adjust</command>
      <property>/instrumentation/wxradar/display-mode</property>
      <step>1.0</step>
      <min>0</min>
      <max>9</max>
      <wrap>false</wrap>
     </binding>
   </action>
   <action>
     <button>1</button>
     <repeatable>false</repeatable>
     <binding>
      <command>property-adjust</command>
      <property>/instrumentation/wxradar/display-mode</property>
      <step>-1.0</step>
      <min>0</min>
      <max>9</max>
      <wrap>false</wrap>
     </binding>
   </action>   
 </animation>

  
