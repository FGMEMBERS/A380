<?xml version="1.0"?>

<PropertyList>

	<path>../../../Models/FlightDeck/Glareshield/efis_fo.ac</path> 
	<texture-path>../../../Textures/Instruments</texture-path>
	<offsets>
		<z-m>0.25</z-m>
	</offsets>

 <animation>
    <type>pick</type>
    <object-name>baro.select</object-name>
    <action>
        <button>0</button>
	<binding>
          <command>property-toggle</command>
          <property>/instrumentation/efis/baro-mode</property>
        </binding>
      </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>baro.knob</object-name>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
	<property>/instrumentation/altimeter/setting-inhg</property>
	<step>0.01</step>
	<max>40.00</max>
	<min>0.00</min>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
	<property>/instrumentation/altimeter/setting-inhg</property>
	<step>-0.01</step>
	<max>40.00</max>
	<min>0.00</min>
      </binding>
    </action>
  </animation>
 
 
  <animation>
   <type>textranslate</type>
   <object-name>baro.04</object-name>
   <property>/instrumentation/efis/baro</property>
   <factor>0.0001</factor>
   <step>1000.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>
 <animation>
   <type>textranslate</type>
   <object-name>baro.03</object-name>
   <property>/instrumentation/efis/baro</property>
   <factor>0.001</factor>
   <step>100.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>
 <animation>
   <type>textranslate</type>
   <object-name>baro.02</object-name>
   <property>/instrumentation/efis/baro</property>
   <factor>0.01</factor>
   <step>10.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>
 <animation>
   <type>textranslate</type>
   <object-name>baro.01</object-name>
   <property>/instrumentation/efis/baro</property>
   <factor>0.1</factor>
   <step>1.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>
 
 <animation>
   <type>select</type>
   <object-name>mode.plan</object-name>
   <condition>
     <equals>
     <property>/instrumentation/wxradar/display-mode</property>
     <value>3</value>
     </equals>
   </condition>
 </animation>
 
 <animation>
   <type>select</type>
   <object-name>mode.arc</object-name>
   <condition>
     <equals>
     <property>/instrumentation/wxradar/display-mode</property>
     <value>2</value>
     </equals>
   </condition>
 </animation>
  
