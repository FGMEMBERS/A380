<?xml version="1.0"?>

<PropertyList>

	<path>../../../Models/FlightDeck/Glareshield/efis_fo.ac</path> 
	<texture-path>../../../Textures/Instruments</texture-path>
	<offsets>
		<z-m>0.25</z-m>
	</offsets>

 <animation>
    <type>pick</type>
    <object-name>baro.select</object-name>
    <action>
        <button>0</button>
	<binding>
          <command>property-toggle</command>
          <property>/instrumentation/efis/baro-mode</property>
        </binding>
      </action>
  </animation>

  <animation>
  <condition>
      <equals>
        <property>/instrumentation/efis/baro-std-mode</property>
        <value>0</value>
      </equals>
    </condition>
    <type>pick</type>
    <object-name>baro.knob</object-name>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
	<property>/instrumentation/altimeter/setting-inhg</property>
	<step>0.01</step>
	<max>40.00</max>
	<min>0.00</min>
      </binding>
    </action>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
	<property>/instrumentation/altimeter/setting-inhg</property>
	<step>-0.01</step>
	<max>40.00</max>
	<min>0.00</min>
      </binding>
    </action>
  </animation>
 
   <animation>
    <type>pick</type>
    <object-name>baro.knob</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/baro-std-mode</property>
      </binding>
    </action>
  </animation>
 
 <text>
    <name>baro.value.hPa</name>
    <axis-alignment>yz-plane</axis-alignment>
    <alignment>right-bottom</alignment>
    <offsets>
      <pitch-deg>-90.0</pitch-deg>
      <x-m>-0.068</x-m>
      <y-m>-0.017</y-m>
      <z-m>0.0009</z-m>
    </offsets>
    <type>number-value</type>
    <property type="string">/instrumentation/efis/kpa</property>
    <format type="string">%4.0f</format>
    <font>led.txf</font>
    <character-size type="double">0.0093</character-size>
  </text>
  
   <text>
    <name>baro.value.inhg</name>
    <axis-alignment>yz-plane</axis-alignment>
    <alignment>right-bottom</alignment>
    <offsets>
      <pitch-deg>-90.0</pitch-deg>
      <x-m>-0.068</x-m>
      <y-m>-0.017</y-m>
      <z-m>0.0009</z-m>
    </offsets>
    <type>number-value</type>
    <property type="string">/instrumentation/efis/inhg</property>
    <format type="string">%2.2f</format>
    <font>led.txf</font>
    <character-size type="double">0.0093</character-size>
  </text>
  
  <text>
    <name>baro.value.std</name>
    <axis-alignment>yz-plane</axis-alignment>
    <alignment>right-bottom</alignment>
    <offsets>
      <pitch-deg>-90.0</pitch-deg>
      <x-m>-0.068</x-m>
      <y-m>-0.017</y-m>
      <z-m>0.0009</z-m>
    </offsets>
    <type>literal</type>
    <text type="string">Std</text>
    <font>led.txf</font>
    <character-size type="double">0.0093</character-size>
  </text>
  
  <animation>
    <type>select</type>
    <object-name>baro.value.hPa</object-name>
    <condition>
      <and>
        <equals>
          <property>/instrumentation/efis/baro-mode</property>
          <value>1</value>
        </equals>
        <equals>
          <property>/instrumentation/efis/baro-std-mode</property>
          <value>0</value>
        </equals>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>baro.value.inhg</object-name>
    <condition>
      <and>
        <equals>
          <property>/instrumentation/efis/baro-mode</property>
          <value>0</value>
        </equals>
        <equals>
          <property>/instrumentation/efis/baro-std-mode</property>
          <value>0</value>
        </equals>
      </and>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>baro.value.std</object-name>
    <condition>
        <equals>
          <property>/instrumentation/efis/baro-std-mode</property>
          <value>1</value>
        </equals>
    </condition>
  </animation>
 
 <animation>
   <type>select</type>
   <object-name>mode.plan</object-name>
   <condition>
     <equals>
     <property>/instrumentation/wxradar/display-mode</property>
     <value>3</value>
     </equals>
   </condition>
 </animation>
 
 
 <animation>
   <type>select</type>
   <object-name>mode.plan</object-name>
   <condition>
     <equals>
     <property>/instrumentation/wxradar/display-mode</property>
     <value>3</value>
     </equals>
   </condition>
 </animation>
 
 <animation>
   <type>select</type>
   <object-name>mode.arc</object-name>
   <condition>
     <equals>
     <property>/instrumentation/wxradar/display-mode</property>
     <value>2</value>
     </equals>
   </condition>
 </animation>
  
 <animation>
   <type>select</type>
   <object-name>mode.nav</object-name>
   <condition>
     <equals>
     <property>/instrumentation/wxradar/display-mode</property>
     <value>0</value>
     </equals>
   </condition>
 </animation>
  
 <animation>
   <type>select</type>
   <object-name>mode.vor</object-name>
   <condition>
     <equals>
     <property>/instrumentation/wxradar/display-mode</property>
     <value>1</value>
     </equals>
   </condition>
 </animation>
  
 <animation>
   <type>select</type>
   <object-name>mode.ls</object-name>
   <condition>
     <equals>
     <property>/instrumentation/wxradar/display-mode</property>
     <value>4</value>
     </equals>
   </condition>
 </animation>

 <animation>
   <type>pick</type>
   <object-name>ndmode.knob</object-name>
   <action>
     <button>0</button>
     <repeatable>false</repeatable>
     <binding>
      <command>property-adjust</command>
      <property>/instrumentation/wxradar/display-mode</property>
      <step>1.0</step>
      <min>0</min>
      <max>9</max>
      <wrap>false</wrap>
     </binding>
   </action>
   <action>
     <button>1</button>
     <repeatable>false</repeatable>
     <binding>
      <command>property-adjust</command>
      <property>/instrumentation/wxradar/display-mode</property>
      <step>-1.0</step>
      <min>0</min>
      <max>9</max>
      <wrap>false</wrap>
     </binding>
   </action>   
 </animation>

  
 <animation>
   <type>select</type>
   <object-name>range.zoom</object-name>
   <condition>
   <less-than>
     <property>/instrumentation/wxradar/range</property>
     <value>10</value>
   </less-than>
   </condition>
 </animation>

 <animation>
   <type>select</type>
   <object-name>range.10</object-name>
   <condition>
   <equals>
     <property>/instrumentation/wxradar/range</property>
     <value>10</value>
   </equals>
   </condition>
 </animation>
 
 <animation>
   <type>select</type>
   <object-name>range.20</object-name>
   <condition>
   <equals>
     <property>/instrumentation/wxradar/range</property>
     <value>20</value>
   </equals>
   </condition>
 </animation>
  
 <animation>
   <type>select</type>
   <object-name>range.40</object-name>
   <condition>
   <equals>
     <property>/instrumentation/wxradar/range</property>
     <value>40</value>
   </equals>
   </condition>
 </animation>
  
 <animation>
   <type>select</type>
   <object-name>range.80</object-name>
   <condition>
   <equals>
     <property>/instrumentation/wxradar/range</property>
     <value>80</value>
   </equals>
   </condition>
 </animation>
  
 <animation>
   <type>select</type>
   <object-name>range.160</object-name>
   <condition>
   <equals>
     <property>/instrumentation/wxradar/range</property>
     <value>160</value>
   </equals>
   </condition>
 </animation>
  
 <animation>
   <type>select</type>
   <object-name>range.320</object-name>
   <condition>
   <equals>
     <property>/instrumentation/wxradar/range</property>
     <value>320</value>
   </equals>
   </condition>
 </animation>
  
 <animation>
   <type>select</type>
   <object-name>range.640</object-name>
   <condition>
   <equals>
     <property>/instrumentation/wxradar/range</property>
     <value>640</value>
   </equals>
   </condition>
 </animation>
 
  <animation>
    <type>material</type>
    <object-name>baro.value.hPa</object-name>
    <object-name>baro.value.inhg</object-name>
    <object-name>baro.value.std</object-name>
    <diffuse>
      <red>0.898</red>
      <green>0.898</green>
      <blue>1.0</blue>
    </diffuse>
    <ambient>
      <red>0.898</red>
      <green>0.898</green>
      <blue>1.0</blue>
    </ambient>
    <emission>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.663</blue>
    </emission>
    <specular>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
    </specular>
    <shininess>128.0</shininess>
    <transparency><alpha>0.7</alpha></transparency>
  </animation>
  
  <animation>
    <name>group</name>
    <object-name>baro.value.hPa</object-name>
    <object-name>baro.value.inhg</object-name>
    <object-name>baro.value.std</object-name>
    <object-name>range.zoom</object-name>
    <object-name>range.10</object-name>
    <object-name>range.20</object-name>
    <object-name>range.40</object-name>
    <object-name>range.80</object-name>
    <object-name>range.160</object-name>
    <object-name>range.320</object-name>
    <object-name>range.640</object-name>
    <object-name>mode.plan</object-name>
    <object-name>mode.arc</object-name>
    <object-name>mode.ls</object-name>
    <object-name>mode.vor</object-name>
    <object-name>mode.nav</object-name>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>group</object-name>
    <condition>
      <greater-than>
        <property>/systems/electrical/outputs/efis</property>
        <value>9</value>
      </greater-than>
    </condition>
  </animation>
  

</PropertyList> 
 
