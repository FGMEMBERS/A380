<!-- ALT -->
<!-- Altitude readout and knob -->
 <animation>
   <type>textranslate</type>
   <object-name>FCU ALT mesh1</object-name>
   <property>/instrumentation/afs/target-altitude-ft</property>
   <factor>0.00001</factor>
   <step>10000.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>FCU ALT mesh2</object-name>
   <property>/instrumentation/afs/target-altitude-ft</property>
   <factor>0.0001</factor>
   <step>1000.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>FCU ALT mesh3</object-name>
   <property>/instrumentation/afs/target-altitude-ft</property>
   <factor>0.001</factor>
   <step>100.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>FCU ALT mesh4</object-name>
   <property>/instrumentation/afs/target-altitude-ft</property>
   <factor>0.01</factor>
   <step>10.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>textranslate</type>
   <object-name>FCU ALT mesh5</object-name>
   <property>/instrumentation/afs/target-altitude-ft</property>
   <factor>0.1</factor>
   <step>1.0</step>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>
 
  <animation>
  <type>pick</type>
  <object-name>ALT knob</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
      <command>nasal</command>
      <script>FCU.toggle_alt_select(-1)</script>
   </binding>
  </action>
  <action>
   <button>1</button>
   <repeatable>false</repeatable>
   <binding>
    <command>nasal</command>
    <script>FCU.toggle_alt_select(1)</script>
   </binding>
  </action>
  <!--  scrollwheel -->
  <action>
    <button>3</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>FCU.increment_alt()</script>
    </binding>
  </action>
  <!-- scrollwheel -->
    <action>
    <button>4</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>FCU.decrement_alt()</script>
    </binding>
  </action>
</animation>

<animation>
  <type>select</type>
  <object-name>ALT group</object-name>
  <condition>
    <equals>   
      <property>/instrumentation/afs/vertical-alt-display</property>
      <value>0</value>
    </equals>
  </condition>
</animation>


